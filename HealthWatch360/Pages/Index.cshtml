@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron text-center text-light bg-dark">
    <div class="container">
        <h1 class="display-4">Welcome to HealthWatch 360</h1>
        <p class="lead">Your ultimate health and wellness companion. Track your health, stay informed, and live better!</p>
        <a href="/Features" class="btn btn-primary btn-lg mt-3">Explore Features</a>
    </div>
</div>

<!-- Features Section -->
<section class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-secondary text-light">
                <img src="~/images/feature1.jpg" class="card-img-top" alt="Feature 1">
                <div class="card-body">
                    <h5 class="card-title">Personalized Health Tracking</h5>
                    <p class="card-text">Monitor your key health metrics and get tailored recommendations.</p>
                    <a href="/Features#tracking" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-light">
                <img src="~/images/feature2.jpg" class="card-img-top" alt="Feature 2">
                <div class="card-body">
                    <h5 class="card-title">Nutrition Insights</h5>
                    <p class="card-text">Receive daily nutrition advice and tips to stay on top of your diet.</p>
                    <a href="/Features#nutrition" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-light">
                <img src="~/images/feature3.jpg" class="card-img-top" alt="Feature 3">
                <div class="card-body">
                    <h5 class="card-title">Wellness Tips & Tricks</h5>
                    <p class="card-text">Stay motivated with daily tips on fitness, mindfulness, and more.</p>
                    <a href="/Features#wellness" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="container my-5">
    <h2 class="text-center mb-4">What Our Users Say</h2>
    <div class="row">
        <div class="col-md-6 mb-4">
            <blockquote class="blockquote bg-secondary p-4 text-light">
                <p>"HealthWatch 360 has transformed my life! The personalized insights are spot on."</p>
                <footer class="blockquote-footer text-light">Sarah M.</footer>
            </blockquote>
        </div>
        <div class="col-md-6 mb-4">
            <blockquote class="blockquote bg-secondary p-4 text-light">
                <p>"I love the nutrition tracking feature. It’s helped me stay on top of my diet and feel better."</p>
                <footer class="blockquote-footer text-light">John D.</footer>
            </blockquote>
        </div>
    </div>
</section>
