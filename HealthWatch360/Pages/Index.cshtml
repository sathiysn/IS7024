@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
         .jumbotro
    n {
         padding: 4rem 2rem;

         margin-bottom: 2rem;
         background: linear-gradient(to right, #343a40, #495057);
         border-radius: 10px;
         }
     .jumbotron h1 {

         font-size: 3rem;
         font-weight: bold;
         margin-bottom: 0.5rem;
         }
     .jumbotron p {

         font-size: 1.25rem;
     }
     .card {
         border: none;
         border-radius: 10px;
         box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
     }
     .card-title {
         font-size: 1.5rem;
         font-weight: 600;
         color: #ffcc00;
     }
     .card-body p {
         font-size: 1.1rem;
     }
     .pie-chart {
         width: 150px;
         height: 150px;
         background: conic-gradient(#dc3545 0% 40%, #17a2b8 40% 100%);
         border-radius: 50%;
         box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
     }
     .progress {
         height: 10px;
         border-radius: 5px;
         background-color: #6c757d;
     }
     .progress-bar {
         background-color: #ff6347;
     }
     .health-section {
         margin-bottom: 1.5rem;
         padding: 1rem 0;
     }
     .health-section p {
         margin: 0.3rem 0;
     }
</style>

<div class="jumbotron text-center text-light">
    <div class="container">
        <h1 class="display-4">Welcome to HealthWatch 360</h1>
        <p class="lead">Your ultimate health and wellness companion. Track your health, stay informed, and live better!</p>
    </div>
</div>

<!-- Health Summary -->
<div class="card bg-dark text-light mb-4">
    <div class="card-body">
        <h5 class="card-title">Health Summary</h5>
        <div class="d-flex justify-content-between">
            <p class="mb-0">Weight: 70kg</p>
            <p class="mb-0">BMI: 22.3</p>
            <p class="mb-0">Heart Rate: 72 bpm</p>
        </div>
    </div>
</div>

<!-- Nutrition Overview -->
<div class="card bg-dark text-light mb-4">
    <div class="card-body">
        <h5 class="card-title">Nutrition Overview</h5>
        <p>Daily Caloric Intake: 1800 kcal</p>
        <!-- Placeholder Pie Chart -->
        <div class="d-flex justify-content-center my-3">
            <div class="pie-chart"></div>
        </div>
        <small class="text-muted">Macronutrients and Micronutrients Balance</small>
    </div>
</div>

<!-- Activity Level -->
<div class="card bg-dark text-light mb-4">
    <div class="card-body">
        <h5 class="card-title">Activity Level</h5>
        <p>Steps Taken: 8000 steps</p>
        <p>Active Minutes: 45 min</p>
        <!-- Progress Bar -->
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>

<!-- Health Tips -->
<div class="card bg-dark text-light mb-4">
    <div class="card-body">
        <h5 class="card-title">Health Tips</h5>
        <p>Stay hydrated and maintain a balanced diet for optimal health.</p>
    </div>
</div>
