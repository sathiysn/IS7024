<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - HealthWatch 360</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">

    <!-- Background Image & Dark Overlay Container -->
    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;">
        <img src="https://wallpapercave.com/wp/wp7535600.jpg" alt="Image of Young Person Exercising" style="width: 100%; height: 100%; object-fit: cover;" />
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.8);"></div>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container">
            <!-- Logo -->
            <img src="https://cdn-icons-png.flaticon.com/128/3195/3195418.png" alt="HealthWatch 360 Logo" style="height: 40px; margin-right: 10px;">
            <a class="navbar-brand" href="/"><span id="navbarUserName">HealthWatch 360</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Exercise">Exercise</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Reports">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Userz/Create">Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-secondary text-light py-4">
        <div class="container text-center">
            <p>&copy; 2024 HealthWatch 360. All rights reserved.</p>
            <p>
                Follow us on:
                <a href="#" class="text-light mx-2">Twitter</a> |
                <a href="#" class="text-light mx-2">Instagram</a> |
                <a href="#" class="text-light mx-2">Facebook</a>
            </p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- The line below ensures there are no internal server errors while loading scripts in razor pages.-->
    @RenderSection("Scripts", required: false)

    <script>
        // Function to update navbar greeting from localStorage
        function updateNavbarGreeting() {
            const firstName = localStorage.getItem("firstName") || "Guest";
            document.getElementById("navbarUserName").textContent = `Hello, ${firstName}`;
        }

        // Initialize greeting on page load
        document.addEventListener("DOMContentLoaded", updateNavbarGreeting);
    </script>
</body>
</html>
